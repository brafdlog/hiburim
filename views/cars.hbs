<!-- Custom styles for this template -->
<link href="stylesheets/cars.css" rel="stylesheet">

<div class="container-fluid">
	<div class="row">
		<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
			<h1 class="page-header pull-right">רכבים</h1>

			<div class="table-responsive">
				<table id="carsTable" class="table table-striped">
					<thead>
						<tr>
							<th>זמין עד</th>
							<th>זמין מ</th>
							<th>טלפון של הנהג</th>
							<th>שם הנהג</th>
							<th>סוג רכב</th>
						</tr>
					</thead>
					<tbody>
						{{#each cars}}
						<tr carId={{_id}}>
							<td class="epochDateColumn">
								{{availableUntil}}
							</td>
							<td class="epochDateColumn">
								{{availableFrom}}
							</td>
							<td>
								{{driverNumber}}
							</td>
							<td>
								{{driverName}}
							</td>
							<td class="carTypeIconColumn">
								{{#if van}}
									<img src="/images/van.png" alt="Van" width="40px">
								{{else}}
									<img src="/images/privateCar.png" alt="Private" width="40px">
								{{/if}}
							</td>
						</tr>
						{{/each}}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

<script src="/javascripts/jquery.tablesorter.min.js"></script>
<script src="/javascripts/moment.js"></script>

<script>
	
	function _toDateString(dateEpoch) {
		var date = moment.unix(dateEpoch);
		return date.format("D/M, H:mm");
	}

	// When page loads attach the table sorter to the table.
	// It is possible to pass parameters to decide which columns he will sort by in the beginning.
	$(function(){
		$("#carsTable").tablesorter();

		// Translate epoch date to string
		var elementsWithEpochDate = $(".epochDateColumn");
		$.each(elementsWithEpochDate, function(index, element) {
			var dateString = _toDateString($(element).text());
			$(element).text(dateString);
		});
	});
</script>